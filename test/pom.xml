    <rspec-expectations.version>2.12.1</rspec-expectations.version>
    <rspec-mocks.version>2.12.2</rspec-mocks.version>
    <diff-lcs.version>1.1.3</diff-lcs.version>
    <jruby-launcher.version>1.0.18.pre1</jruby-launcher.version>
    <gem.home>../lib/ruby/gems</gem.home>
  </properties>
  <build>
    <testSourceDirectory>.</testSourceDirectory>
    <defaultGoal>test</defaultGoal>
    <plugins>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>gem-maven-plugin</artifactId>
        <version>${jruby.plugins.version}</version>
        <executions>
          <execution>
            <phase>initialize</phase>
            <goals><goal>initialize</goal></goals>
            <configuration>
              <gemPath>${gem.home}</gemPath>
              <gemHome>${gem.home}</gemHome>
              <libDirectory>../lib</libDirectory>
              <jrubyJvmArgs>-Djruby.home=${basedir}/..</jrubyJvmArgs>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.5</version>
        <executions>
          <execution>
            <id>clean-gems</id>
            <phase>clean</phase>
            <goals>
              <goal>clean</goal>
            </goals>
            <configuration>
              <filesets>
                <fileset>
                  <directory>${gem.home}</directory>
                </fileset>
              </filesets>
            </configuration>
          </execution>
        </executions>
      </plugin>
